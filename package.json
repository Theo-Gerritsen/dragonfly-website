{
  "name": "dragonfly-website",
  "version": "1.0.0",
  "description": "JavaScript & CSS for the dragonfly website.",
  "main": "content/js/app.ts",
  "dependencies": {
    "@types/pluralize": "0.0.29",
    "animated-scroll-to": "^2.0.7",
    "history": "^4.10.1",
    "jarallax": "^1.12.1",
    "list.js": "^1.5.0",
    "lodash-es": "^4.17.15",
    "lozad": "^1.14.0",
    "pluralize": "^8.0.0",
    "postcss-easings": "^2.0.0",
    "query-string": "^6.12.1",
    "scrollmagic": "^2.0.7",
    "smoothscroll-polyfill": "^0.4.4",
    "tailwindcss": "^1.4.0",
    "way-of-life": "^0.3.0",
    "zepto": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/plugin-syntax-nullish-coalescing-operator": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@types/history": "^4.7.5",
    "@types/list.js": "^1.5.3",
    "@types/lodash": "^4.14.150",
    "@types/lodash-es": "^4.17.3",
    "@types/lozad": "^1.9.0",
    "@types/smoothscroll-polyfill": "^0.3.1",
    "@types/zepto": "^1.0.30",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.22.0",
    "autoprefixer": "^9.7.6",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.3",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-watch": "^6.0.1",
    "file-loader": "^5.1.0",
    "glob": "^7.1.6",
    "glyphs2font": "^1.2.1",
    "husky": "^4.2.5",
    "imports-loader": "^0.8.0",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.8.2",
    "postcss": "^7.0.27",
    "postcss-cli": "^7.1.1",
    "postcss-font-magician": "^2.3.1",
    "postcss-import": "12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-reporter": "^6.0.1",
    "prettier": "^2.0.4",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "ts-loader": "^6.2.2",
    "tslint": "^5.20.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "zepto-webpack": "^1.2.1"
  },
  "scripts": {
    "analyze:check": "npm run eslint:check && npm run prettier:lint && npm run stylelint:lint && npm run ts:lint",
    "analyze:fix": "npm run eslint:fix && npm run prettier:fix && npm run stylelint:fix",
    "analyze:lint": "npm run ts:lint && npm run stylelint:lint && npm run prettier:lint",
    "build:fonts": "postcss content/fonts/dragonfly.css --env production -o _site/fonts/dragonfly.css",
    "build:js": "webpack --mode=production",
    "build": "npm run css & npm run fonts & npm run build:js",
    "check-types": "tsc",
    "css": "postcss content/stylesheets/main.src.css --env production -o content/stylesheets/dragonfly.css",
    "eslint": "eslint \"./content/js/**/*.ts\"",
    "eslint:check": "eslint --print-config \"content/js/**/*.ts\" | eslint-config-prettier-check",
    "eslint:fix": "eslint --fix \"content/js/**/*.ts\"",
    "fonts": "mkdir -p content/fonts & glyphs2font fonts.yaml",
    "prettier:fix": "prettier --write \"content/js/**/*.ts\"",
    "prettier:lint": "prettier --check \"content/js/**/*.ts\"",
    "stylelint:fix": "stylelint content/stylesheets/**/*.src.css --fix",
    "stylelint:lint": "stylelint content/stylesheets/**/*.src.css",
    "ts:lint": "tslint -c tslint.json 'content/js/**/*.ts'",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "postcss ./content/stylesheets/main.src.css --env development -m -o ./content/stylesheets/dragonfly.css -w",
    "watch:js": "webpack -w"
  },
  "author": "",
  "license": "MIT",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./content/**/*.{ts,src.css}": "npm run analyze:fix"
  }
}
