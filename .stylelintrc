{
    "extends": "stylelint-config-standard",
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["extends", "tailwind", "screen"]
            }
        ],
        "indentation": 4,
        "font-family-no-missing-generic-family-keyword": [
            true,
            {
                "ignoreFontFamilies": ["object-fit: cover;"]
            }
        ]
    }
}
